{
  "name": "sort-package",
  "displayName": "Sort Package",
  "author": {
    "name": "jamesinaxx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesinaxx/vscode-sort-package"
  },
  "version": "0.0.1",
  "description": "Sort package.json on save or by command",
  "categories": [
    "Formatters"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src --ext ts",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "yarn run package",
    "watch": "webpack --watch",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "contributes": {
    "configuration": {
      "title": "Sort Package",
      "properties": {
        "sortPackage.onSave": {
          "description": "Sort package.json on save",
          "type": "boolean",
          "default": true
        }
      }
    },
    "commands": [
      {
        "command": "sort-package.sortPackage",
        "title": "Sort Package"
      }
    ]
  },
  "activationEvents": [
    "onCommand:sort-package.sortPackage",
    "onLanguage:json"
  ],
  "dependencies": {
    "sort-package-json": "1.53.1"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "1.62.0",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "eslint": "8.1.0",
    "ts-loader": "9.2.5",
    "typescript": "4.4.4",
    "webpack": "5.52.1",
    "webpack-cli": "4.8.0"
  },
  "engines": {
    "vscode": "^1.62.0"
  }
}
